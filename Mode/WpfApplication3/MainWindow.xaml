<Window x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Width="525"
        Height="350">
    <Canvas>
        <Button Canvas.Left="105"
                Width=" 200"
                Height="30"
                Click="Button_Click" />
        <TextBox Name="txt"
                 Canvas.Left="70"
                 Canvas.Top="35"
                 Width=" 300"
                 Height="30" />
        <ListBox Name="list1"
                 Canvas.Top="65"
                 Width="224"
                 Height=" 250"
                 SelectionChanged="list1_SelectionChanged"
                 SelectionMode="Multiple" />
        <ListBox Name="list2"
                 Canvas.Left="229"
                 Canvas.Top="70"
                 Width="278"
                 Height=" 250">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Name="image" Source="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Canvas>
</Window>
