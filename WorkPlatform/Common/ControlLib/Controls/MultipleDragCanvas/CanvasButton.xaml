<UserControl x:Class="ControlLib.CanvasButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ControlLib;component/Themes/ButtonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Width="70" Height="70">
        <Button Click="Button_Click" MouseDoubleClick="btn_MouseDoubleClick" />


        <Rectangle Margin="0,0,0,10"
                   IsEnabled="False"
                   IsHitTestVisible="False" />

    </Grid>
</UserControl>
