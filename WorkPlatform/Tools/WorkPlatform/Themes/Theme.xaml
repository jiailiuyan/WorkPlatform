                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsDragging" Value="True">
                                    <Setter TargetName="rectangle2" Property="Fill">
                                        <Setter.Value>
                                            <RadialGradientBrush>
                                                <RadialGradientBrush.RelativeTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform CenterX="0.5"
                                                                        CenterY="0.5"
                                                                        ScaleX="1"
                                                                        ScaleY="2.048" />
                                                        <TranslateTransform X="0" Y="0.021" />
                                                    </TransformGroup>
